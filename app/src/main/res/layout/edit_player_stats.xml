<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/landingpage"
    android:padding="25dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_gravity="center"
        android:layout_width="170dp"
        android:layout_height="55dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:text="StatRack"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:textColor="#fff"
        android:textSize="40sp" />

    <EditText
        android:id="@+id/playerAppearances"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/cardview_light_background"
        android:layout_marginTop="5dp"
        tools:text="Appearances: " />

    <EditText
        android:id="@+id/playerGoals"
        android:layout_width="wrap_content"
        android:textColor="@color/cardview_light_background"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        tools:text="Goals: " />

    <EditText
        android:id="@+id/playerAssists"
        android:layout_width="wrap_content"
        android:textColor="@color/cardview_light_background"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        tools:text="Assists: " />

    <EditText
        android:id="@+id/playerYellowCards"
        android:layout_width="wrap_content"
        android:textColor="@color/cardview_light_background"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        tools:text="Yellow Cards: " />

    <EditText
        android:id="@+id/playerRedCards"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/cardview_light_background"
        android:layout_marginTop="5dp"
        tools:text="Red Cards: " />

</LinearLayout>
