<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/landingpage"
    tools:context=".TestEventCreation">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="25dp">

            <TextView
                android:id="@+id/title"
                android:layout_gravity="center"
                android:layout_width="170dp"
                android:layout_height="55dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:text="StatRack"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:textColor="#fff"
                android:textSize="40sp" />


            <EditText
                android:id="@+id/nameInput"
                android:layout_width="match_parent"
                android:textColor="@color/cardview_light_background"
                android:layout_height="wrap_content"
                android:hint="Enter Event"/>

            <EditText
                android:id="@+id/timeInput"
                android:layout_width="match_parent"
                android:textColor="@color/cardview_light_background"
                android:layout_height="wrap_content"
                android:hint="Enter Start Time"/>

            <EditText
                android:id="@+id/dateInput"
                android:layout_width="match_parent"
                android:textColor="@color/cardview_light_background"
                android:layout_height="wrap_content"
                android:hint="Enter Date"/>

            <EditText
                android:id="@+id/locationInput"
                android:layout_width="match_parent"
                android:textColor="@color/cardview_light_background"
                android:layout_height="wrap_content"
                android:hint="Enter Location of Event"/>


            <Button
                android:id="@+id/addToDatabaseButton"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/buttoncurved_trans"
                android:textColor="@color/cardview_light_background"
                android:layout_marginTop="16dp"
                android:text="Add to Database"
                android:textStyle="bold" />

            <Button
                android:id="@+id/backButton"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/buttoncurved_trans"
                android:textColor="@color/cardview_light_background"
                android:layout_marginTop="16dp"
                android:text="Back"
                android:textStyle="bold" />

            <Button
                android:id="@+id/EditEvent"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/buttoncurved_trans"
                android:textColor="@color/cardview_light_background"
                android:layout_marginTop="16dp"
                android:text="EditEvent"
                android:textStyle="bold" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>